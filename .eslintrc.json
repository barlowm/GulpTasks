{
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },


    "globals": {
        "require": true,
        "module": true,
        "window": true,
        "define": true
    },

    "rules": {
        "no-console": 0,
        "indent": [
            "error",
            "tab"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-unused-vars": [
            0,
            {
                "args": "none"
            }
        ]
    },
    "plugins": [
        "json"
    ]
}
